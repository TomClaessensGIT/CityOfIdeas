@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">Antwerpen bloeit, jij kiest waar en waarin!</h1>
                <hr class="divider my-4">
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">Op deze site kan je verschillende projecten en ideeën bekijken en of delen met elkaar. Stem voor de toekomst van Antwerpen </p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" asp-controller="Home" asp-action="about">Meer over ons</a>
            </div>
        </div>
    </div>
</header>
<!-- About Section -->
<section class="page-section bg-primary" id="about">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">Antwerpen heeft jou nodig!</h2>
                <hr class="divider light my-4">
                <p class="text-white-50 mb-4">Klik op de knop om alle projecten te bekijken die in de stad Antwerpen momenteel actief zijn. Stem er op en geef je eigen inbreng, kies zelf welke projecten jou voorkeur hebben.</p>
                <a class="btn btn-light btn-xl js-scroll-trigger" href="#services">Bekijk Projecten</a>
            </div>
        </div>
    </div>
</section>
<!-- Services Section -->
<section id="sectionProj">
    <div class="container">
        <h2 class="text-center mt-0">De populairste projecten!</h2>
        <hr class="divider my-4">
    </div>
</section>

<!-- Portfolio Section -->
<div class="container-fluid content-row">
    <div class="row">
        @foreach (CID.BL.Domain.Project proj in ViewBag.projects)
        {
            <div class="col-sm-4 py-2">
                <div class="card-img-top">
                    <a asp-controller="Project" asp-action="Index"><img class="card-img-top" src="~/@proj.Image" alt="Card image cap"></a>
                    <div class="card-body">
                        <p class="card-text"> @proj.Title</p>

                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <button class="btn btn-sm btn-outline-secondary"><i class="fa fa-thumbs-up">101 Like</i> </button>
                                <button class="btn btn-sm btn-outline-secondary"><i class="fa fa-share">25 Share</i> </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    </div>
