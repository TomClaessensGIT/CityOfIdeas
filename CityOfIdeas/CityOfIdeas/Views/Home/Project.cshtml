@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>
    <!-- Portfolio Section -->
    
        <div style="height:8rem"></div>
        <div class="container" id="backgroundLogin">
            <div class="row">
                @foreach (CID.BL.Domain.Project proj in ViewBag.projects)
                {
                    <div class="card" style="width: 35rem; height: 40rem; margin-right:10px; margin-bottom:10px">
                        <img class="card-img-top" src="~/@proj.Image">
                        <div class="card-block">
                            <h2>@proj.Title</h2>
                            <p style="font-family: Arial, Helvetica, sans-serif; font-size: 14px;">@proj.Text.Substring(0, 380)...</p>
                        </div>
                    </div>
                }
            </div>
            </div>
</body>
</html>

