@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <!-- Portfolio Section -->
        <div style="height:8rem"></div>
        <div class="container">
            <div class="row">
                @foreach (CID.BL.Domain.Project proj in ViewBag.projects)
                {
                    <style>
                        .ellipsis {
                            text-overflow: ellipsis;
                        }
                    </style>
                    <div class="card" style="width: 35rem; height: 37rem; margin-right:10px; margin-bottom:10px;">
                        <a asp-controller="Project" asp-action="Index" asp-route-id="@proj.ID"><img class="card-img-top" src="~/@proj.Image"></a>
                        <div class="card-block" style="display: -webkit-box; overflow: hidden; text-overflow: ellipsis; -webkit-line-clamp:5; -webkit-box-orient:vertical;">
                            <h3>@proj.Title</h3>
                            <p class="overflow-hidden" style="font-family: Arial, Helvetica, sans-serif; font-size: 14px;">@proj.Text</p>
                            <div style="text-align:left"><a style="font-size:12px; text-align:right;" asp-controller="Project" asp-action="Index" asp-route-id="@proj.ID">Meer weergeven</a></div>
                            
                        </div>
                    </div>
                }
            </div>
            </div>
</body>
</html>

